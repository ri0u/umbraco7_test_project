@inherits UmbracoViewPage<Contact>
@using Terratype;
@{
    Layout = "Master.cshtml";
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")

<section class="section">
    <div class="container">

        <div class="row">

            <div class="col-md-6">
                <h2>@Model.MapHeader</h2>
                @Html.Terratype(Model.Map)
            </div>

            <div class="col-md-6">
                <h2>@Model.ContactFormHeader</h2>
                @Model.ContactIntro

                @(Html.Action<ContactFormController>("Render"))
            </div>

        </div>
    </div>
</section>